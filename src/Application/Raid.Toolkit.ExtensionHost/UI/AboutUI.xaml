<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Raid.Toolkit.ExtensionHost.AboutUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Raid.Toolkit.ExtensionHost"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<StackPanel Margin="12">
		<TextBlock x:Name="DisplayName" TextWrapping="Wrap" Margin="0,10,0,0" FontWeight="Bold" Text="{x:Bind Model.BundleToInstall.Manifest.DisplayName}" />
		<TextBlock x:Name="Description" TextWrapping="Wrap" Margin="10,5,0,0" Text="{x:Bind Model.BundleToInstall.Manifest.Description}" />
	</StackPanel>
</UserControl>
